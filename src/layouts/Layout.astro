						}
					},
					{
						"@type": "Offer", 
						"itemOffered": {
							"@type": "Service",
							"name": "Obras Civiles",
							"description": "Construcción integral y modificación de obras existentes con materiales de primera calidad"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service", 
							"name": "Instalación Sanitaria",
							"description": "Soluciones completas en instalaciones sanitarias y de gas natural"
						}
