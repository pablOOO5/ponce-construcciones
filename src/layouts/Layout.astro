			"description": "Empresa especializada en servicios de construcción industrial con más de 15 años de experiencia en Santa Fe y provincias de Argentina.",
			"url": "https://poncepablo.com.ar",
			"logo": "https://poncepablo.com.ar/images/logo/logo-primary.svg",
			"image": "https://poncepablo.com.ar/images/about-ponce.jpg",
			"telephone": "+54-342-5573707",
			"additionalProperty": [
				{
					"@type": "PropertyValue",
					"name": "Teléfono Adicional",
					"value": "+54-342-5546807"
				}
			],
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Caferata 1437",
				"addressLocality": "Recreo", 
				"addressRegion": "Santa Fe",
				"postalCode": "3018",
				"addressCountry": "AR"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "-31.4974",
				"longitude": "-60.7412"
			},
			"areaServed": [
				{
					"@type": "State",
					"name": "Santa Fe"
				},
				{
					"@type": "State", 
					"name": "Buenos Aires"
				},
				{
					"@type": "State",
