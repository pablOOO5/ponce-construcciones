				}
			],
			"foundingDate": "2008",
			"hasOfferCatalog": {
				"@type": "OfferCatalog",
				"name": "Servicios de Construcción Industrial",
				"itemListElement": [
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
