---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
  class?: string;
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  width = 800,
  height = 500,
  quality = 80,
  format = 'webp',
  class: className = '',
  loading = 'lazy'
} = Astro.props;

// Import de la imagen desde public
const imagePath = `/images/${src}`;
---

<img 
  src={imagePath}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
  style="object-fit: cover; border-radius: inherit;"
/>

<style>
  img {
    display: block;
    max-width: 100%;
    height: auto;
  }
</style>
